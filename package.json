{
  "name": "@liautaud/typezod",
  "version": "1.0.0",
  "description": "Zod-like DSL for comparing TypeScript compiler types against user-defined schemas",
  "type": "module",
  "license": "MIT",
  "author": "Romain Liautaud",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liautaud/typezod.git"
  },
  "keywords": [
    "typescript",
    "type-checking",
    "type-aware-linting",
    "typescript-eslint",
    "zod"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm test && npm run build"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "tsdown": "^0.11.9",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
